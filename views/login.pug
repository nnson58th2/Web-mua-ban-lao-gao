//- extends layout

include _includes/sharedHTMLfunctions

block content
    .container
            .row
                .col-md-4.col-md-offset-4
                    .login-panel.panel.panel-default
                        .panel-heading
                            h3.panel-title Please Sign In
                        .panel-body
                            .alert.alert-danger
                            form(role='form', action='/auth/login', method='POST')
                                fieldset
                                    .form-group
                                        input.form-control(placeholder='E-mail', name='email', type='email', autofocus='')
                                    .form-group
                                        input.form-control(placeholder='Password', name='password', type='password', value='')
                                    button.btn.btn-lg.btn-success.btn-block(type='submit') Login
block script

